<h2>Napisz do nas</h2>

<%= form_for :form, url: forms_path do |f| %>

<% if @form.errors.any? %>
<div id="error_explanation">
  <ul>
    <% @form.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<p>
<%= f.label :email, "Email" %><br>
<%= f.text_field :email %>
</p>

<p>
<%= f.label :text, "Treść wpisu" %><br>
<%= f.text_area :text %>
</p>

<p>
  <%= f.submit "Wyślij" %>
</p>
<hr>
<%= link_to 'Wróć do strony głównej bloga', root_path %>

<% end %>
