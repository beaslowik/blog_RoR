<%= form_for :form, url: form_path(@form), method: :patch do |f| %>

<% if @form.errors.any? %>
<div id="error_explanation">
  <ul>
    <% @form.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<p>
  <%= f.label :email, 'Email' %><br>
  <%= f.text_field :email %>
</p>

<p>
  <%= f.label :text, 'Treść' %><br>
  <%= f.text_area :text %>
</p>

<p>
  <%= f.submit 'Zapisz' %>
</p>
<% end %>
<hr>

<%= link_to 'Wróć do listy wiadomości', forms_path %>
